<% layout('layouts/boilerplate.ejs') %>

<body>
  <div class="row mt-3 mb-3">
    <div class="col-8 offset-2">
      <h3>Edit your Listing</h3>
      <form method="post" action="/listings/<%= list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input type="text" name="listing[title]" value="<%= list.title %>" class="form-control" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <lable for="description" class="form-label">Description</lable>
          <textarea type="text" name="listing[description]" class="form-control" required>
<%= list.description %></textarea>
          <div class="invalid-feedback">Please enter a description!</div>
        </div>
        <div class="mb-3">
          Original Listing Image <br>
          <img src="<%= originalimgurl%>" alt="">
        </div>
        <div class="mb-3">
          <lable for="image" class="form-label">Upload New Image</lable>
          <input type="file" name="listing[image]" class="form-control" />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input type="number" name="listing[price]" value="<%= list.price %>" class="form-control" required />
            <div class="invalid-feedback">Please enter a valid price!</div>
          </div>
          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input type="text" name="listing[country]" value="<%= list.country %>" class="form-control" required />
            <div class="invalid-feedback">Please enter a valid country!</div>
          </div>
        </div>
        <div class="mb-3">
          <lable for="location" class="form-label">Location</lable>
          <input type="text" name="listing[location]" value="<%= list.location %>" class="form-control" required />
          <div class="invalid-feedback">Please enter a valid location!</div>
        </div>
        <button class="btn btn-dark edt-btn mt-3">Update</button>
      </form>
    </div>
  </div>
</body>